<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TelReh</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TelReh.styles.css" asp-append-version="true" />


</head>
<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Kisi" asp-action="Index">Ana Sayfa</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-opacity-50" asp-area="" asp-controller="Kisi" asp-action="Ekle">Kişi Ekle</a>
                        </li>
                    </ul>
                    <form class="d-flex" role="search">
                        <input class="form-control me-2" type="search" placeholder="Aranacak kişiyi yaz!" aria-label="Search">
                        <button class="btnn btn-outline-success" type="submit">Ara</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">

            @if (TempData["BasariliMesaj"] != null)
            {
                <div class="alert alert-success">
                    @TempData["BasariliMesaj"]
                </div>
            }

            @if (TempData["HataliMesaj"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["HataliMesaj"]
                </div>
            }

            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - TelReh - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/lib/Inputmask-5.x/dist/jquery.inputmask.js"></script>
    


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<script>

    $("#telno1").inputmask({ mask: "(999) [999 9999]", greedy: false });
    $("#evtel").inputmask({ mask: "(999) [999 9999]", greedy: false });
    $("#istel").inputmask({ mask: "(999) [999 9999]", greedy: false });

</script>